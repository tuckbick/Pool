<head>
	<meta charset="utf-8" />

	<meta name="viewport" content="user-scalable=no, initial-scale=1.0, maximum-scale=1.0, width=device-width"/>
	<meta name="HandheldFriendly" content="True">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="apple-mobile-web-app-status-bar-style" content="black">
	<meta name="apple-mobile-web-app-title" content="Pool">
	<meta http-equiv="cleartype" content="on">

	<title></title>

	<link rel="stylesheet" href="stylesheets/style.css">
	<!-- // <script src="http://192.168.2.130:8081/target/target-script-min.js#anonymous"></script> -->

	<!--[if lt IE 9]>
		<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->

</head>
<body>
	<div id="content">
		<div class="row" id="header">
			<div class="fixed contain-to-grid">
				<nav class="top-bar">
					<ul>
						<li class="name">
							<h1 class="title show"><%= title %></h1>
							<h2 class="status"></h2>
						</li>
						<li class="toggle-topbar show"><a href=""></a></li>
					</ul>
					<section>
						<ul class="right">
							<li class="divider"></li>
							<li>
								<a id="add-photos" href="">Add Photos</a>
								<input id="file-input" class="hide" type="file" name="file-photos[]" accept="image/*" multiple />
							</li>
						</ul>
					</section>
				</nav>
			</div>
		</div>
		<div class="row" id="loading">
			<div class="twelve columns">
				<img src="images/loading.gif" />
			</div>
		</div>
		<div class="row" id="photos">
			<div class="column">
				<ul class="block-grid eight-up" id="photos-list"></ul>
			</div>
		</div>
		<div id="darkroom">
			<div id="stage"></div>
			<ul id="controls">
				<li id="go-left"><i class="foundicon-left-arrow"></i></li>
				<li id="go-play"><i class="foundicon-video"></i></li>
				<li id="go-stop" class="hide"><i class="foundicon-remove"></i></li>
				<li id="go-home"><i class="foundicon-home"></i></li>
				<li id="go-right"><i class="foundicon-right-arrow"></i></li>
			</ul>
		</div>
	</div>
	
	<script src="//twitter.github.com/hogan.js/builds/2.0.0/hogan-2.0.0.min.js"></script>
	<script src="/socket.io/socket.io.js"></script>
	<script src="javascripts/app.min.js"></script>

</body>
</html>